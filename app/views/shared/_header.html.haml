%header#header
  .inner-wrap.clearfix
    %h1#logo
      = link_to "CraigsKit - A toolset for Craigslist", root_path
    %nav
      - if current_verified_user
        %ul#nav.clearfix
          %li
            = link_to "Home", root_path
          %li
            = link_to "Get Started", get_started_path
          %li
            = link_to "Settings", edit_verified_user_registration_path
          %li
            = link_to "Log Out", destroy_verified_user_session_path
      - else
        %ul#nav.clearfix
          %li
            = link_to "How Does It Work?", features_path
          %li
            = link_to "Pricing", pricing_path
          %li
            = link_to "Sign Up", new_verified_user_registration_path
          %li
            = link_to "Log In", verified_user_session_path
